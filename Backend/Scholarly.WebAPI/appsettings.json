{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Warning",
      "System": "Warning"
    },
    "NLog": {
      "IncludeScopes": true,
      "ParseMessageTemplates": true
    }
  },
  "NLog": {
    "throwConfigExceptions": true,
    "targets": {
      "async": true,
      "logconsole": {
        "type": "ColoredConsole",
        "layout": "${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}"
      },
      "logfile": {
        "type": "File",
        "fileName": "${basedir}/logs/scholarly-${shortdate}.log",
        "layout": "${longdate}|${level:uppercase=true}|${logger}|${message} ${exception:format=tostring}",
        "archiveFileName": "${basedir}/logs/archives/scholarly-{#}.log",
        "archiveEvery": "Day",
        "archiveNumbering": "Rolling",
        "maxArchiveFiles": 7,
        "keepFileOpen": false,
        "enableFileDelete": true
      },
      "logdatabase": {
        "type": "Database",
        "dbProvider": "Npgsql.NpgsqlConnection, Npgsql",
        "connectionString": "${configsetting:name=ConnectionStrings.DefaultConnection}",
        "commandText": "INSERT INTO Log (Logged, Level, Message, Logger, Exception, UserName, Url, ServerName) VALUES (CAST(@Logged AS timestamp), @Level, @Message, @Logger, @Exception, @UserName, @Url, @ServerName);",
        "parameters": [
          {
            "name": "@Logged",
            "layout": "${date}"
          },
          {
            "name": "@Level",
            "layout": "${level}"
          },
          {
            "name": "@Message",
            "layout": "${message}"
          },
          {
            "name": "@Logger",
            "layout": "${logger}"
          },
          {
            "name": "@Exception",
            "layout": "${exception:tostring}"
          },
          {
            "name": "@UserName",
            "layout": "${aspnet-user-identity}"
          },
          {
            "name": "@Url",
            "layout": "${aspnet-request-url}"
          },
          {
            "name": "@ServerName",
            "layout": "${machinename}"
          }
        ]
      }
    },
    "rules": [
      {
        "logger": "*",
        "minLevel": "Trace",
        "writeTo": "logconsole"
      },
      {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "logfile"
      },
      {
        "logger": "*",
        "minLevel": "Info",
        "writeTo": "logdatabase"
      }
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
