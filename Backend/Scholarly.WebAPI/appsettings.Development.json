{
  "Logging": {
    "LogLevel": {
      "Default": "Debug",
      "Microsoft.AspNetCore": "Information",
      "Microsoft.EntityFrameworkCore": "Information",
      "System": "Information",
      "Scholarly": "Debug"
    }
  },
  "NLog": {
    "rules": [
      {
        "logger": "*",
        "minLevel": "Trace",
        "writeTo": "logconsole"
      },
      {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "logfile"
      },
      {
        "logger": "*",
        "minLevel": "Debug",
        "writeTo": "logdatabase"
      }
    ]
  },
  "LoggingSettings": {
    "EnableConsoleLogging": true,
    "EnableFileLogging": true,
    "EnableDatabaseLogging": false,
    "MinimumLogLevel": "Debug"
  }
}
